include ./mixins/mixins.pug

doctype html
html(lang="ru")
	+head()
	body.page
		include ../images/sprite.svg
		.page__body(v-bind:class="{ 'page__body--noscroll': noScroll }")
			include ./partials/header.pug
			main.page__main.d-flex.flex-column
				section.section.section--articles.order-1
					.page__wrapper.pb-4
						.page__main-content
							article--xl(v-if="front.lead"  v-bind="front.lead")
							//-+article--xl(1)
						aside.page__main-aside
							.article__wrapper
								+article--lg(17)
								hr.hr
								+article--sm(18)
				section.section.section--banners.order-2
					.page__wrapper
						+banner-first-aid()
						+banner-structure()
						+banner-join()
				section.section.section--articles.order-4.order-lg-3
					.page__wrapper
						.page__main-content.order-2.order-lg-1
							.article__wrapper.article__wrapper--cols-2.d-none.d-lg-flex
								//-+articles--lg([2,5,6,7], 'mb-6')
								article--lg.mb-6(v-for="article in front.news" :key="article.id" v-bind="article")
							+showmore()
						aside.page__main-aside.order-1.order-lg-2
							.block--bordered
								a.block__title.mt-0.mb-3(href=around_page) Вокруг университета
								.article__wrapper
									//-+articles--xs([4,19,20,21,22,4,19,20], 'mb-4')
									article--xs.mb-4(v-for="article in front.around" :key="article.id" v-bind="article")
				section.section.section--actions.order-3.order-lg-4
					.page__wrapper
						a.block__title.mb-4(href="#") Наши действия
						.article__wrapper.article__wrapper--cols-4
							//-+articles--md([3,8,9,10])
							article--md(v-for="article in front.actions" :key="article.id" v-bind="article")
				section.section.section--articles.mb-7.pb-7.order-5.d-none.d-lg-block
					.page__wrapper.pt-4
						.page__main-content
							a.block__title.mb-4(href="#") Интервью
							.article__wrapper.article__wrapper--cols-2
								//-+articles--lg([11,12,13,14])
								article--lg(v-for="article in front.interview" :key="article.id" v-bind="article")
							+showmore()
						aside.page__main-aside
							a.block__title.mb-4(href="#") «На дне образования»
							.article__wrapper.article__wrapper
								+article--lg(15, '', true)
								+article--lg(16, '', true)
							+showmore()
			include ./partials/partners.pug
			include ./partials/footer.pug
		+scripts()