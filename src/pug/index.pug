include ./mixins.pug

doctype html
html(lang="ru")
	+head()
	body.page
		include ../images/sprite.svg
		.page__body
			header.page__header
				.header__top
					.page__wrapper
						ul.list.socials.header__socials
							li.list__item
								a.link(href="#")
									+icon('facebook')
							li.list__item
								a.link(href="#")
									+icon('vkontakte')
							li.list__item
								a.link(href="#")
									+icon('youtube')
							li.list__item
								a.link(href="#")
									+icon('telegram')
							li.list__item
								ul.list.header__language
									li.list__item
										a.link(href="#")
											+icon('britain')
									li.list__item.list__item--hidden
										a.link(href="#")
											+icon('russia')
						form.header__search(v-bind:class="{ 'header__search--active': isActive }")
							input.control__field(type="text", placeholder="Поиск по сайту" @focus="onFocus", @blur="onBlur")
							button.btn.btn--icon(type="submit")
								+icon('search')
			main.page__main
				.page__wrapper
					| page__main
			footer.page__footer
				.page__wrapper
					| page__footer
		+scripts()