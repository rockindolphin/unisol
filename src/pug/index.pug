include ./mixins.pug
include ./partials/articles.pug

doctype html
html(lang="ru")
	+head()
	body.page
		include ../images/sprite.svg
		.page__body
			include ./partials/header.pug
			main.page__main
				.page__wrapper
					.page__main-content
						+article--xl(1)
						.article__wrapper-2
							+article--lg(2)
							+article--lg(5)
					aside.page__main-aside
						+article--lg(17)
						hr.hr
						+article--sm(18)
						+articles--xs([4,19,20,21,22,4,19,20])
			.section.section--actions
				.page__wrapper
					.article__wrapper-4
						+articles--md([3,8,9,10])
			main.page__main
				.page__wrapper
					.page__main-content
						.article__wrapper-2
							+articles--lg([11,12,13,14])
					aside.page__main-aside
						+article--lg(15)
						+article--lg(16)
			include ./partials/partners.pug
			include ./partials/footer.pug
		+scripts()