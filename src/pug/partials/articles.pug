	function cutText(text, length){
		var words = text.split(' ');
		var l = 0;
		var overflow = false;
		var resp = []; 
		words.map(word => {
			if( l >= length-3 ){ 
				overflow = true;
			}else{
				resp.push(word);
				l += word.length + 1;							
			}
		});
		return overflow ? resp.join(' ') + '...' : resp.join(' ');
	} 

mixin article--xl(id, userClass)
	- var article = articles.filter(item => item.id === id);
	- uc = {class: userClass || ''};
	if article.length > 0
		- 
			var pic_url = `images/articles/article-${article[0].id}.jpg`
			var pic_alt = `article-${article[0].id}`
		article.article.article--xl()&attributes(uc)
			.article__pic
				img(src=pic_url, alt=pic_alt, data-bg="true")
				.article__pic-wrapper
					.article__categories
						each category in article[0].categories
							a.categories__item(href="#") #{category}
					a.article__title(href="#") #{article[0].title}
			.article__info
				.article__date #{article[0].date}
				.article__tags
					each tag in article[0].tags					
						a.tags__item(href="#") #{tag}
			.article__excerpt #{article[0].excerpt}		
	else
		p(style="color: red;")= 'Error! article not found'

mixin articles--xl(arr, userClass)
	each id in arr
		+article--xl(id, userClass)

mixin article--lg(id, userClass, isVideo)
	- var article = articles.filter(item => item.id === id);
	- uc = {class: userClass || ''};
	if article.length > 0
