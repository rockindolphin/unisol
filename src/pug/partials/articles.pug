			var pic_alt = `article-${article[0].id}`
			var youtube_url = `https://www.youtube.com/embed/${article[0].youtube}`
		article.article.article--lg()&attributes(uc)
			.article__pic
				if isVideo
					.article__video
						iframe(src=youtube_url, frameborder='0', allow='autoplay; encrypted-media', allowfullscreen='true')
				else
					img(src=pic_url, alt=pic_alt, data-bg="true")
					.article__pic-wrapper
						.article__categories
							each category in article[0].categories
								a.categories__item(href="#") #{category}
			.article__info
				.article__date #{article[0].date}
				.article__tags
