header.page__header
	.header__top
		.page__wrapper
			ul.list.socials.header__socials
				li.list__item
					a.link(href="#", aria-label="unisolidaity facebook")
						+icon('facebook')
				li.list__item
					a.link(href="#", aria-label="unisolidaity vkontakte")
						+icon('vkontakte')
				li.list__item
					a.link(href="#", aria-label="unisolidaity youtube")
						+icon('youtube')
				li.list__item
					a.link(href="#", aria-label="unisolidaity telegram")
						+icon('telegram')
			ul.list.header__language
				li.list__item.list__item--hidden(@click="toggleLanguage('en',$event)")
					a.link(href="#", aria-label="toggle english")
						+icon('britain')
				li.list__item(@click="toggleLanguage('ru',$event)")
					a.link(href="#", aria-label="toggle russian")
						+icon('russia')
			form.header__search(v-bind:class="{ 'header__search--active': searchActive }")
				input.control__field(type="text", placeholder="Поиск по сайту" @focus="activateSearch", @blur="deactivateSearch")
				button.btn.btn--icon(type="submit")
					+icon('search')
			button.header__menu-open(aria-label="open menu", @click="openMenu")
				+icon('menu')
	a.header__logo(href=href=index_page)
		.page__wrapper
			.header__logo-left
				include ../../images/logo-left.svg
			.header__logo-text
