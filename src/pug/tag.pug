include ./mixins/mixins.pug

doctype html
html(lang="ru")
	+head()
	body.page
		include ./partials/svg_sprite.pug
		.page__body
			+header()
			main.page__main
				section.section.section--articles
					.page__wrapper.mb-7.pb-3
						.page__main-content
							.article__wrapper.article__wrapper--cols-2
								+articles--lg([2,5,6,7,13,14,2,5], 'mb-6')
							.pagination
								a.pagination__item(href="#") 1
								.pagination__item.pagination__item--current 2
								a.pagination__item(href="#") 3
								a.pagination__item(href="#") >
						aside.page__main-aside
							+banner-first-aid('mb-5')
							+banner-structure('mb-5')
							+banner-join('mb-5')
							.banner.banner--around
								.block--bordered
									a.block__title.mt-0.mb-3(href=around_page) Вокруг университета
									.article__wrapper
										+articles--xs([4,19,20,21,22,4,19,20], 'mb-4')
			include ./partials/partners.pug
			include ./partials/footer.pug
		+scripts()