mixin article--blog(id)
	- var article = articles.filter(item => item.id === id);
	if article.length > 0
		- 
			var pic_url = `images/articles/article-${article[0].id}.jpg`
			var pic_alt = `article-${article[0].id}`
		+categories(article[0].categories)
		.article__info
			.article__date #{article[0].date}
			+tags(article[0].tags)
		.article__title #{article[0].title}
		//-img(src=pic_url, alt=pic_alt)
		+picture({'src': pic_url, 'alt':pic_alt})
	else
		p(style="color: red;")= 'Error! article not found'

