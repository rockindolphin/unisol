	function cutText(text, length){
		var words = text.split(' ');
		var l = 0;
		var overflow = false;
		var resp = []; 
		words.map(word => {
			if( l >= length-3 ){ 
				overflow = true;
			}else{
				resp.push(word);
				l += word.length + 1;							
			}
		});
		return overflow ? resp.join(' ') + '...' : resp.join(' ');
	} 

